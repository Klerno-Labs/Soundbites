###############################################################################
# Soundbites Quiz - Production Environment Configuration
# Copy this file to .env and fill in your actual values
###############################################################################

# === REQUIRED ===

# Database connection string
# PostgreSQL (production): postgresql://user:password@host:5432/database
# SQLite (development): sqlite:./soundbites.db
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/soundbites_quiz

# JWT secret for admin authentication (use strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING

# Frontend URL (where your quiz is hosted)
FRONTEND_URL=https://otis.soundbites.com

# Node environment
NODE_ENV=production

# === AUTHENTICATION ===

# Admin account credentials (change after first login!)
ADMIN_USERNAME=c.hatfield309@gmail.com
ADMIN_PASSWORD=Hearing2025

# Cookie settings
COOKIE_DOMAIN=.soundbites.com
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# === TIKTOK INTEGRATION ===

# TikTok Pixel ID (from TikTok Ads Manager)
TIKTOK_PIXEL_ID=D3QKIABC77U1STIOMN20

# TikTok Events API Access Token (for server-side event tracking)
# Get from: TikTok Ads Manager → Settings → Events → Generate Access Token
# Required scopes: events:write, pixel:read
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# === OPTIONAL ===

# Server port (default: 3000)
PORT=3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://otis.soundbites.com

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_TTL=86400
SESSION_REFRESH_INTERVAL=3600

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# === EMAIL (if using EmailJS) ===
# EMAILJS_SERVICE_ID=your_service_id
# EMAILJS_TEMPLATE_ID=your_template_id
# EMAILJS_PUBLIC_KEY=your_public_key

